@model Funfik.Core.Entities.Article

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Article</legend>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">Category</div>
    <div class="display-field">@(Model.Category == null ? "None" : Model.Category.Name)</div>

    <div class="display-label">Likes</div>
    <div class="display-field">@(Model.Likes == null ? "None" : Model.Likes.Count.ToString())</div>

    <div class="display-label">Tags</div>
    <div class="display-field">@(Model.Tags == null ? "None" : Model.Tags.Count.ToString())</div>

    <div class="display-label">CreationDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.CreationDate)</div>

    <div class="display-label">LastEditDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.LastEditDate)</div>
    
    <div class="display-label">Chapters</div>
    @foreach (var chapter in Model.Chapters)
    {
        <div class="display-field">@Ajax.ActionLink(chapter.Title, MVC.Default.Chapter.ShowChapter(chapter),
                                                    new AjaxOptions()
                                                        {
                                                            UpdateTargetId = "chapter",
                                                            InsertionMode = InsertionMode.Replace
                                                        })</div>
    }
</fieldset>
<p>
    @Html.ActionLink("Edit", MVC.Default.Article.Edit(Model.ArticleId))
</p>

<div id="chapter"></div>


